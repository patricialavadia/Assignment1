@model Assignment1.Models.BooksBorrowed

@{
    ViewData["Title"] = "Book Borrowed Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Book Borrowed Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Book ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookId)
        </dd>
        <dt class = "col-sm-2">
            Member ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberId)
        </dd>
        <dt class = "col-sm-2">
            Book Title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookTitle)
        </dd>
        <dt class = "col-sm-2">
          Member Name
        </dt>
 
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MemberFname)  @Html.DisplayFor(model => model.MemberLname)
        </dd>
        <dt class = "col-sm-2">
            Date Borrowed
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateBorrowed)
        </dd>
        <dt class = "col-sm-2">
            Return Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BorrowedId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
